% Call  $Function_GetPlayerBadgesAmount ( *out )
#new:Function $Function_GetPlayerBadgesAmount
{
    PUSH      RA, A0, A1, A2, A3, V0, V1, S0
    COPY      S0, A0
    JAL       $get_player_badges_amount
    NOP
    COPY      A0, S0
    LW        A1, C (A0)
    LW        A1, 0 (A1)
    JAL       ~Func:set_variable
    COPY      A2, V0
    POP       RA, A0, A1, A2, A3, V0, V1, S0
    JR        RA
    ORI       V0, R0, 2
}

#new:Function $get_player_badges_amount
{
    PUSH      RA, A0, A1, A2, A3, V1
    LIO       A0, 8010F344 % playerBadges
    CLEAR     V0
    CLEAR     A2
    .Loop
    LHU       A1, 0 (A0) % get badge
    ADDIU     A2, A2, 1
    ADDIU     A0, A0, 2
    BNEL      A1, R0, .CheckCap
    ADDIU     V0, V0, 1
    .CheckCap
    SLTIU     A3, A2, 128` % player can hold 128 badges
    BNE       A3, R0, .Loop
    NOP
    .End
    POP       RA, A0, A1, A2, A3, V1
    JR        RA
    NOP
}

#new:Function $Function_UpdateBadgePos
{
    PUSH    RA, A0, A1, A2, A3, V1, S0, S1, S2
    COPY    S0, A0
    JAL     ~Func:get_actor
    LW      A0, 148 (A0) % get self actorID
    COPY    S1, V0
    BEQ     V0, R0, .End
    ORI     V0, R0, 2
    LW      A0, 98 (S1) % get actorVar 0x04
    ADDI    A1, R0, -1
    BEQ     A0, A1, .End
    CLEAR   V0
    COPY    A0, S1
    JAL     ~Func:get_actor_part
    ORI     A1, R0, 2 % coin
    COPY    S2, V0
    JAL     ~Func:get_item_entity
    LW      A0, 98 (S1) % get actorVar 0x04
    % get coin pos
    LW      A0, 58 (S2) % X
    LW      A1, 5C (S2) % Y
    LW      A2, 60 (S2) % Z
    % update item pos
    ADDIU   A0, A0, 0
    ADDIU   A1, A1, 0
    ADDIU   A2, A2, 0
    SW      A0, 8 (V0) % X
    SW      A1, C (V0) % Y
    SW      A2, 10 (V0) % Z
    CLEAR   V0
    .End
    POP     RA, A0, A1, A2, A3, V1, S0, S1, S2
    JR      RA
    NOP
}
