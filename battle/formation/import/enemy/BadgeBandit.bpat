% Call  $Function_ActivateBadge ( `badgeID` )
#new:Function $Function_ActivateBadge
{
    PUSH    RA, A0, A1, A2, A3, V1, S0
    LW      A1, C (A0)
    JAL     ~Func:get_variable
    LW      A1, 0 (A1)
    COPY    S0, V0
    % activate badge, find next available slot
    LIO     A0, 8010F498 % Activated Badge #1
    LIO     A1, 8010F516 % Activated Badge #64 (last slot)
    .Loop
    LHU     A2, 0 (A0)
    BEQ     A2, R0, .SlotFound
    NOP
    ADDIU   A0, A0, 2 % read next badge
    SLTU    A3, A1, A0
    BEQ     A3, R0, .Loop
    NOP
    % free slot wasn't found
    BEQ     R0, R0, .End
    NOP
    .SlotFound
    SH      S0, 0 (A0) % activate badge
    .End
    POP     RA, A0, A1, A2, A3, V1, S0
    JR      RA
    ORI     V0, R0, 2
}

% Call  $Function_RemoveAndUnequipBadge ( `badgeID` *out_unequiped_bool )
%
% Unequip badge if neccesary.
#new:Function $Function_RemoveAndUnequipBadge
{
    PUSH    RA, A0, A1, A2, A3, V1, S0, S1
    COPY    S0, A0
    LW      A1, C (A0)
    JAL     ~Func:get_variable
    LW      A1, 0 (A1)
    COPY    S1, V0
    JAL     $IsBadgeActivated_Stack
    COPY    A0, V0
    BNE     V0, R0, .UnequipBadge
    NOP
    COPY    A0, S0
    LW      A1, C (A0)
    LW      A1, 4 (A1)
    JAL     ~Func:set_variable
    CLEAR   A2
    BEQ     R0, R0, .RemoveBadge
    NOP
    .UnequipBadge
    COPY    A0, S0
    LW      A1, C (A0)
    LW      A1, 4 (A1)
    JAL     ~Func:set_variable
    ORI     A2, R0, 1
    JAL     $Function_GetBadgeAddress_Equipped
    COPY    A0, S1
    SH      R0, 0 (V0) % clear badge
    .RemoveBadge
    JAL     $Function_GetBadgeAddress_Inventory
    COPY    A0, S1
    SH      R0, 0 (V0) % clear badge
    POP     RA, A0, A1, A2, A3, V1, S0, S1
    JR      RA
    ORI     V0, R0, 2
}

